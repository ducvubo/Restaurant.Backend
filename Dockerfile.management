# Multi-stage build for Management API
# Stage 1: Build
FROM maven:3.9-eclipse-temurin-21 AS build

WORKDIR /app

# Copy pom files first for better layer caching
COPY pom.xml .
COPY restaurant-start-management/pom.xml ./restaurant-start-management/
COPY restaurant-controller-management/pom.xml ./restaurant-controller-management/
COPY restaurant-application/pom.xml ./restaurant-application/
COPY restaurant-infrastructure/pom.xml ./restaurant-infrastructure/
COPY restaurant-domain/pom.xml ./restaurant-domain/

# Create a temporary pom.xml with only required modules for management build
RUN sed -i '/<module>restaurant-start-portal<\/module>/d; /<module>restaurant-controller-portal<\/module>/d' pom.xml

# Copy source code
COPY restaurant-start-management/src ./restaurant-start-management/src
COPY restaurant-controller-management/src ./restaurant-controller-management/src
COPY restaurant-application/src ./restaurant-application/src
COPY restaurant-infrastructure/src ./restaurant-infrastructure/src
COPY restaurant-domain/src ./restaurant-domain/src

# Build the application
# -pl: project list (specify which modules to build)
# -am: also-make (build dependencies too)
# -N: non-recursive (don't build child modules, only specified one)
RUN mvn clean package -DskipTests -B -pl restaurant-start-management -am

# Stage 2: Runtime
FROM eclipse-temurin:21-jre-alpine

WORKDIR /app

# Create non-root user
RUN addgroup -S spring && adduser -S spring -G spring
USER spring:spring

# Copy the executable JAR file from build stage (exclude original and sources JARs)
COPY --from=build /app/restaurant-start-management/target/restaurant-start-management-*.jar app.jar

# Expose port
EXPOSE 8081

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:8081/actuator/health || exit 1

# Run the application
ENTRYPOINT ["java", "-jar", "app.jar"]

